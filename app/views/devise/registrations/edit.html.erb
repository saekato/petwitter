<h2>profile編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="circle-icon">
    <%= f.file_field :icon, id: :user_icon %>
    <% if current_user.persisted? && current_user.icon? %>
      <%= image_tag current_user.icon.to_s %>
      <label><%= f.check_box :remove_icon %>画像を削除</label>
    <% elsif @user.icon.present? %>
      <%= image_tag @user.icon, id: :icon_prev %>
    <% else %>
      <%= image_tag 'default.jpg', id: :icon_prev %>
      <%= f.hidden_field :icon_cache %>
    <% end %>

  </div>
  
  <div class="field">
    <%= f.label :name, "Pet name" %><br />
    <%= f.text_field :name, autofocus: true%>
  </div>
  
  <div class="gender">
    <%= f.label :gender, "Pet gender" %><br />
    <%= f.label :♂ %>
    <%= f.radio_button :gender, :♂ %>
    <%= f.label :♀ %>
    <%= f.radio_button :gender, :♀ %>
    <%= f.label :other %>
    <%= f.radio_button :gender, :other %>
</div>
  
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  
  <div class="field">
    <%= f.label :age %><br />
    <%= f.text_field :age, autofocus: true%>歳
  </div>

  <div class="field">
    <%= f.label :animal_type, "Pet type 例:いぬ、ねこ※ひらがなで入力してね" %><br />
    <%= f.text_field :animal_type, autofocus: true%>
  </div>
  

  <div class="actions">
    <%= f.submit "更新する" %>
  </div>
<% end %>

